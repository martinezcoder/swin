<!DOCTYPE html>
<html>
	<head>
		<title><%= full_title(yield(:title)) %></title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<meta name="description" content="SocialWinApp The Advanced Social Media Analytics tool.">
    	<meta name="author" content="Socialwin, http://www.socialwin.es">
    	<%= favicon_link_tag 'favicon.ico' %>
		<%= stylesheet_link_tag "site","shared", media: "all" %>
		<%= javascript_include_tag "application" %>
		<%= csrf_meta_tags %>
		<%= render 'layouts/shared/shim' %>
		<%= render 'layouts/shared/analytics'%>
		<script type="text/javascript" src="https://getfirebug.com/firebug-lite.js"></script>
		<script type="text/javascript" src="/local/path/to/firebug-lite-debug.js"></script>
	</head>

	<body>
		<%= render 'layouts/shared/header' %>
		
		<%= yield %>
	
		<%= render 'layouts/shared/footer' %>
	</body>
</html>