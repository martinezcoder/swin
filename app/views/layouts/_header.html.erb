	<header class="navbar navbar-fixed-top">
		<div class="navbar-inner">
			<div class="container">
				<%= link_to root_path, id: "logo" do %>
					SocialWin Analytics <small><em>βeta</em></small> 
				<% end %>
				<nav>
					<ul class="nav pull-right">

						<% if signed_in? %>

						    <% if current_user.pages.count > 0 %>
								<li><%= link_to "Dashboard",   root_path %></li>
								<li><%= link_to "Competidores",  competitors_user_page_path(current_user, ss_active_page) %></li>
							<% end %>

							<li id="fat-menu" class="dropdown">

					
								<a href="#" class="dropdown-toggle" data-toggle="dropdown">
									<%= image_for current_user %>
									<span class="user-session"><%= current_user.name %></span><b class="caret"></b>
								</a>
							
								<ul class="dropdown-menu">

									<li><%= link_to user_path(current_user) do %><i class="icon-user"></i> Perfil<% end %></li>

									<li><%= link_to user_pages_path(current_user) do %><i class="icon-wrench"></i> Ajustes de páginas<% end %></li>

									<li class="divider"></li>
									<li>
										<%= link_to signout_path, method: "delete" do %><i class="icon-remove"></i> Cerrar sesión<% end %>
									</li>
								</ul>
							</li>


						<% else %>

							<li><%= link_to "Home",   root_path %></li>
							<li><%= link_to "Ayuda",  help_path %></li>


							<li id="fat-menu" class="dropdown">
								<a href="#" class="dropdown-toggle" data-toggle="dropdown">
									Entrar <b class="caret"></b>
								</a>
								<ul class="dropdown-menu signinmenu">
									<li><%= link_to "Facebook", '/auth/facebook', class: "btn btn-small btn-primary" %></li>
									<!-- <li><%= link_to "Twitter", "/auth/twitter", class: "btn btn-small btn-info" %></li> -->
								</ul>
							</li>

						<% end %>
					</ul>
				</nav>
			</div>
		</div>
	</header>