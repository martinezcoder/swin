<% if list.pages.any? %>

<div class="competitors_div">
	<div id="competitors_title">
	<%= form_tag(mypath) do %>
		<% list.pages.each do |competitor| %>

			<div id="competitorBox">
	          	<%= link_to page_path(competitor.id), class: "no-decoration"  do %>
	          		<%= image_tag get_picture(competitor), class: "normal_logo", alt: competitor.name, title: competitor.name %>
	          	<% end %>
			</div>		
		<% end %>
	<% end %>
</div>

<% end %>
