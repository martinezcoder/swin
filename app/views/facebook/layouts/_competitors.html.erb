<% if list.pages.any? %>

<div class="competitors_div">

	<div id="competitors_title">
	<%= form_tag(mypath) do %>
		<% list.pages.each do |competitor| %>
			<div class="competitorBox">
	          	<%= link_to smart_page_path(competitor), class: "no-decoration"  do %>
	          		<%= image_tag get_picture(competitor), class: "mini_logo", alt: competitor.name, title: competitor.name %>
	          	<% end %>
	          	<%= link_to get_url(competitor), target: "_blank" do %>
	          		<%= content_tag(:i, '', :class => 'icon-share') %>
	          	<% end %>
          		<%= check_box_tag 'pages[]', competitor[:id], params.has_key?(:pages) ? params[:pages].include?(competitor.id.to_s) : true  %>
			</div>
		<% end %>
		
	    <div id="pick-from" class="input-append date">
	    	<%= text_field_tag :date_from, params.has_key?(:date_from) ? params[:date_from] : Time.now.yesterday.strftime("%Y/%m/%d") %>
	    	<span class="add-on"><i class="icon-th"></i></span>
	    </div>
	    
	    <div id="pick-to"  class="input-append date">
	    	<%= text_field_tag :date_to, params.has_key?(:date_to) ? params[:date_to] : Time.now.yesterday.strftime("%Y/%m/%d") %>
	    	<span class="add-on"><i class="icon-th"></i></span>
	    </div>	    
		    
		<script type="text/javascript">
		  $('.input-append.date').datepicker({
				 format: "yyyy/mm/dd",
				language: "es",
				//todayBtn: "linked",
				autoclose: true,
				todayHighlight: true
		  	 });
		  	
		</script>

		<%= text_field_tag :ndays, params.has_key?(:ndays) ? params[:ndays] : '' %>
		
		<%= button_tag(type: "submit", class: "btn btn-default") do %>
			<strong><i class=" icon-refresh"></i> Actualizar </strong> 
		<% end %>
	<% end %>
	</div>
</div>

<% end %>
