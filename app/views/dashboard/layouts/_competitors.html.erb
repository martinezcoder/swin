<nav class="menu_competitors">

	<ul class="nav nav-pills nav-stacked newline">

		<% @competitors.each do |c| %>
		
			<li class="newline">
				<%= link_to '#', class: 'nav-comp' do%>
			    	<%= image_tag c.pic_square, alt: c.name, class: "comp_avatar" %>
			    	<% if c.name.length > 15 %>
			    		<%= c.name[0..15] %>...
			    	<% else %>
			    		<%= c.name %>
			    	<% end %>
				<% end %>
			</li>
		<% end %>

    </ul>

</nav>
						