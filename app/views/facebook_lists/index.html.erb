
<div class="paginas">
	<div class="fb_stat fb_stat-text">Perfiles</div>	
</div>

<!--<h4>Puedes crear un máximo de <%= current_user.plan.num_lists %> listas</h4>-->
<!--<h2>Elige una de tus listas para monitorizar y comparar</h2>-->


<div class="">
	<div class="row-fluid">
		<div class="span6">
				<ul class="unstyled fb_pages">
					<% @facebook_lists.each do |list| %>
					<li>
						
						  <!--Lider Page:-->
					  	  <div class="fb_stat">
						    <strong id="fb_fans" class="stat">
						    	<% if list.page_id %>
							    	<% p = Page.find(list.page_id) %>
							          	<%= link_to smart_page_path(p), class: "no-decoration"  do %>
							          		<%= image_tag get_picture(p), class: "mini_logo", alt: p.name, title: p.name %>
							          	<% end %>
						        <% end %>
						    </strong>
						  </div>
						  
						  <!--Nombre de lista:-->
						  <div class="fb_stat fb_stat-name"> 
						     <div class="fb_stat">
						        <strong id="fb_fans" class="stat">
						    	<%= list.name %>
						        </strong>
						   </div>				  
						 </div> 
						
					    <!--<div class="fb_stat">
						  	Competidores: 
								 <% render 'competitors_mini_logos', :list => list %>
					        </div>
						-->
								
					  <div class="fb_stat fb_stat-edit pull-right">
							<%= link_to '', edit_facebook_list_path(list), id: 'editar' %>
					  </div>

			
					  <!--
					  <div class="fb_stat fb_btn">
							<% if list == get_active_list %>
								<div class="btn btn-success btn-small disabled">
									<i class="icon-ok icon-white"></i> Activada
								</div> 
							<% else %>
								<%= form_tag(activate_facebook_list_path(list)) do %>
									<%= hidden_field_tag :url, request.url %>
									<%= button_tag(type: "submit", class: "btn btn-small btn-primary") do %>
										<i class=" icon-plus icon-white"></i> Activar
									<% end %>
								<% end %>
							<% end %>
					  </div>
					  -->
					  
					</li>	
					<% end %>
				</ul>
		</div>
		<div class="span6">
			<ul class="unstyled fb_pages">
				<li>
					<% if @facebook_lists.count < current_user.plan.num_lists %>
					<div class="paginas">
						<div class="fb_stat fb_stat-text">Añadir perfil</div>
						<div class="fb_stat pull-right">	
								<%= form_for(new_facebook_list_path) do |list| %>
									<%= list.text_field :page_id, value: 35, type: "hidden" %>
									<%= list.text_field :name, value: 'list', type: "hidden" %>
					  				<%= list.submit "", id: 'new-perfil', class: "" %>
					  			<% end %>
						</div>
					</div>
					<% else %>
					<div class="paginas">
						<div class="fb_stat fb_stat-text">Tu plan no permite crear más perfiles.</div>
					</div>
					<% end %>
					
				</li>
			</ul>

		</div>
	</div>
	
		
</div>