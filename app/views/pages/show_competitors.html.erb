<% provide(:title, @title) %>

<div class="row">
  <aside class="span3 well">

    <section>
		<h2>Página activa</h2>
		<%= render @page, :origin => nil %>
    </section>

    <section>
		<%= render 'competitors_mini_photos' %>
    </section>
  </aside>

											
  <div class="span6 well">


    <h3>Siguiendo a <%= @competitors.count %> competidores:</h3>
	<p>Puede seguir <%= MAX_COMPETITORS - @competitors.count %> competidores más.</p>
	<%= render 'pages/search_form' %>

	<div class="data_follow">

    <% if @competitors.any? %>
      <ul class="fb_pages">
		<% @competitors.each do |p| %>
			<li>
				<%= render p, :origin => 'competitors' %>
			</li>
		<% end %>
      </ul>
    <% else %>
    	<p>Actualmente no sigue a ningún competidor.</p>
    <% end %>
	</div>


  </div>
  
  
</div>




