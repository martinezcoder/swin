<% if object.errors.any? %>
	<div id="error_explanation">
		<div class="alert alert-error">
			Formulario con <%= pluralize(object.errors.count, "error", "errores") %>:
		</div>
    <ul>
	    <% object.errors.full_messages.each do |msg| %>
			      <li>* <%= msg %></li>
	    <% end %>
    </ul>
  </div>
<% end %>
